name: Orchestrator (Prefill + Finals)

on:
  workflow_dispatch:
    inputs:
      leagues:
        description: "Leagues"
        type: choice
        options:
          - both
          - nfl
          - college-football
        default: both
      target_game_ids:
        description: "Game ID"
        required: false
        default: ""

concurrency:
  group: orchestrator-${{ github.ref }}
  cancel-in-progress: false

jobs:
  nfl:
    if: ${{ inputs.leagues == 'both' || inputs.leagues == 'nfl' }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with: { node-version: '20' }
      - name: Install deps
        run: npm i --no-audit --no-fund axios googleapis
      - name: Run orchestrator (NFL)
        env:
          GOOGLE_SHEET_ID: ${{ secrets.GOOGLE_SHEET_ID }}
          GOOGLE_SERVICE_ACCOUNT: ${{ secrets.GOOGLE_SERVICE_ACCOUNT }}
          LEAGUE: nfl
          TAB_NAME: NFL
          RUN_SCOPE: week
          TARGET_GAME_ID: ${{ inputs.target_game_ids }}
          GHA_JSON: "1"
        run: node orchestrator.mjs --gha

  cfb:
    if: ${{ inputs.leagues == 'both' || inputs.leagues == 'college-football' }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with: { node-version: '20' }
      - name: Install deps
        run: npm i --no-audit --no-fund axios googleapis
      - name: Run orchestrator (CFB)
        env:
          GOOGLE_SHEET_ID: ${{ secrets.GOOGLE_SHEET_ID }}
          GOOGLE_SERVICE_ACCOUNT: ${{ secrets.GOOGLE_SERVICE_ACCOUNT }}
          LEAGUE: college-football
          TAB_NAME: CFB
          RUN_SCOPE: week
          TARGET_GAME_ID: ${{ inputs.target_game_ids }}
          GHA_JSON: "1"
        run: node orchestrator.mjs --gha
